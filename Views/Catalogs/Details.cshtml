@model MovieWorld.Data.Catalog

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Catalog</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CatalogName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatalogName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>

       <dt class=" = col-sm-2">
           Movies
       </dt>

        <dd class=" col-sm-10">
            <br />
            <div>
                <ul class=" list-group list-group-flush">
                    @foreach(var item in Model.Movies.Select((v=>v)))
                     {
                          <li class="list-group-item">@item.Movie.MovieName</li>
                     }
                </ul>
            </div>
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CatalogId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
